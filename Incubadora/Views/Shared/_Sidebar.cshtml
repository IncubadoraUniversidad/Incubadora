@using WebHelpers.Mvc5
<aside class="main-sidebar">
    <section class="sidebar">
        @* BEGIN Search *@
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        @* END Search *@
        @* BEGIN Menu *@
    <ul class="sidebar-menu" data-widget="tree">
        <li class="header">Opciones</li>
        <li class="@Url.IsLinkActive("Index", "Home")">
            <a href="@Url.Action("Index", "Home")"><i class="fa fa-link"></i> <span>Home</span></a>
        </li>
        <li class="@Url.IsLinkActive("Create", "Calendarizacion")">
            <a href="@Url.Action("Create", "Calendarizacion")"><i class="far fa-calendar-check"></i><span>&nbsp;Calendarización</span></a>
        </li>


        <li class="treeview">
            <a href="@Url.IsLinkActive("Profiles", "Emprendedor")">
                <i class="fas fa-project-diagram"></i><span>&nbsp;Proyectos</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li class="@Url.IsLinkActive("Profiles","Emprendedor")">
                    @*<a href="@Url.Action("Profiles","Emprendedor")"><i class="fas fa-id-card-alt"></i>&nbsp;<span>Perfiles de Emprendedor</span></a>*@
                    <a href="@Url.Action("Profiles", "Emprendedor")">Mis Proyectos</a>
                </li>
                <li><a href="@Url.Action("Registro", "Proyecto")">Nuevo Proyecto</a></li>
                <li><a href="#">Emprendedores</a></li>
            </ul>
        </li>
        <!--Menu de seguridad -->
        <li class="treeview">
            <a href="#">
                <i class="fas fa-cogs"></i>&nbsp;<span>Configuracón</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                <li class="@Url.IsLinkActive("Perfil","Account")">
                    <a href="@Url.Action("Perfil","Account")"><i class="fas fa-id-card-alt"></i>&nbsp;<span>Perfil de Usuario</span></a>
                </li>
                <li class="@Url.IsLinkActive("Create","Account")">
                    <a href="@Url.Action("Create","Account")"><i class="fas fa-users"></i>&nbsp;<span>Agregar Usuario</span></a>
                </li>
                @if (User.IsInRole("Administrador")) { 
                <li class="@Url.IsLinkActive("Create","Rol")">
                    <a href="@Url.Action("Create","Rol")"><i class="fas fa-id-card"></i>&nbsp;<span>Agregar Rol</span></a>
                </li>
                }
            </ul>
        </li>
    </ul>
        @* END Menu *@
    </section>
</aside>