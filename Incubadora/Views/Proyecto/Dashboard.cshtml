
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="bs-container" style="min-height:960px;">
    <section class="content-header">
        <h2>
            Grafica de Proyectos Por Giro Empresarial
            <small>(Dashboard)</small>
        </h2>

        <ol class="breadcrumb">
            <li><a href="#"> <i class="fa fa-dashboard"></i>Inicio</a></li>
            <li><a href="#">Proyectos</a></li>
            <li class="active">Estadisticas</li>
        </ol>
    </section>

    <div class="row">

        <div class="form-group">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <canvas id="ChartGiro" style="position: relative; height:80vh; width:150vw"></canvas>
            </div>
        </div>
    </div>
    <div class="row">
        <section>

            <h2 class="fa-align-center">Tabla de proyectos</h2>
        </section>
        <div class=" col-sm-12 col-md-12 col-lg-12">
            <table id="TablaDatos" class="table table-responsive table-hover table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Giro</th>
                        <th>Detalles</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div>
            <a href="#" onclick="ReporteGeneral()" class="btn btn-group-lg btn-success">Reporte General</a>
        </div>
    </div>
    <!--Configuración del modal-->
    <div class="modal fade" id="myModalDetails" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header modal-title-oficial-site">
                    <h5 class="modal-title" id="exampleModalLongTitle">Proyecto</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="myModalBodyDetails">

                </div>
            </div>
        </div>
    </div>
    <!--Terminamos el modal-->

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
<script src="~/Content/js/proyectos/dashboard-manager-giro.js"></script>


