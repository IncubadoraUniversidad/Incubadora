@*<body class="login-page">*@
<body>
    <noscript>
        <meta http-equiv="refresh" content="0;URL=@Url.Action("NoScript", "Error")" />
    </noscript>
    <div class="container-fluid ps-md-0">
        <div class="row d-flex row-no-gutters">
            <div class="col-md-6 d-none d-md-flex bg-image"></div>
            <div class="col-md-6 bg-light form-col">
                <div class="login d-flex align-items-center py-5">
                    <!-- Demo content-->
                    <div class="container">
                        <div class="row d-flex">
                            <div class="col-md-10 col-lg-7 mx-auto">
                                <h2 class="text-center margin-bottom">Iniciar sesión</h2>
                                <p class="text-muted margin-bottom">Ingresa tus datos para acceder</p>
                                @using (Html.BeginForm("Login", "Account"))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group has-feedback">
                                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Nombre de usuario o email", required = "" })
                                                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group has-feedback">
                                                @Html.PasswordFor(model => model.PasswordHash, new { @class = "form-control", placeholder = "Contraseña", required = "" })
                                                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                @Html.ValidationMessage("error_login", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button class="pull-right btn btn-primary">Iniciar sesión</button>
                                        </div>
                                    </div>
                                    <br />
                                }
                                <div class="row">
                                    <div class="col-md-12">
                                        @*<div class="social-auth-links text-center">
                                            <p>- O -</p>
                                            <a class="btn btn-primary btn-block" href="#">Iniciar sesión con Facebook</a>
                                            <a class="btn btn-danger btn-block" href="#">Iniciar sesión con Google</a>
